generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Admin {
  userId String @id
  user   User   @relation(fields: [userId], references: [id])
}

model Place {
  id        Int    @id @default(autoincrement())
  name      String
  address   String
  latitude  Float
  longitude Float
  category  String
  imageUrl  String
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  allowed   Boolean  @default(false)
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
  createdAt DateTime @default(now())
}

model Achievement {
  id          Int    @id @default(autoincrement())
  name        String
  description String
  iconUrl     String
  points      Int
  users       User[]
}

model Notification {
  id        Int      @id @default(autoincrement())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  title     String
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model User {
  id               String   @id
  name             String
  email            String
  bagId            String?
  lokaltuPoints    Int      @default(0)
  avatarUrl        String
  pushTokens       String[]
  profileCompleted Boolean  @default(false)

  achievements  Achievement[]
  posts         Post[]
  notifications Notification[]
  admin         Admin?
}
