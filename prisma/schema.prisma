generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Admin {
  userId String @id
  user   User   @relation(fields: [userId], references: [id])
}

model Place {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  name      String
  address   String
  latitude  Float
  longitude Float
  category  String // e.g., "restaurant", "park", "gym"

  // Custom places created by users
  creatorId String?
  creator   User?   @relation("CreatedPlaces", fields: [creatorId], references: [id])

  // Images
  image       String? // URL into R2 bucket
  description String?

  savedBy   User[]     @relation("SavedPlaces")
  purchases Purchase[]

  @@index([latitude, longitude])
}

model Post {
  id        Int       @id @default(autoincrement())
  title     String
  content   String
  allowed   Boolean   @default(false)
  authorId  String
  author    User      @relation(fields: [authorId], references: [id])
  createdAt DateTime  @default(now())
  comments  Comment[]
}

model Comment {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
  postId    Int
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
}

model Achievement {
  id          Int    @id @default(autoincrement())
  name        String
  description String
  iconUrl     String
  points      Int
  users       User[]
}

model Notification {
  id        Int      @id @default(autoincrement())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  title     String
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model User {
  id               String   @id
  name             String
  email            String
  bagId            String?
  lokaltuPoints    Int      @default(0)
  co2Saved         Float    @default(0) // Changed to Float for precision
  bagsSaved        Int      @default(0)
  avatarUrl        String
  pushTokens       String[]
  profileCompleted Boolean  @default(false)

  achievements  Achievement[]
  posts         Post[]
  comments      Comment[]
  notifications Notification[]
  admin         Admin?
  createdPlaces Place[]                 @relation("CreatedPlaces")
  savedPlaces   Place[]                 @relation("SavedPlaces")
  purchases     Purchase[]
  challenges    UserChallengeProgress[]
}

model Challenge {
  id          String                  @id
  name        String
  description String
  goal        Int
  points      Int
  badgeName   String?
  dependency  String? // ID of challenge that must be completed first
  users       UserChallengeProgress[]
}

model UserChallengeProgress {
  userId      String
  challengeId String
  user        User      @relation(fields: [userId], references: [id])
  challenge   Challenge @relation(fields: [challengeId], references: [id])
  current     Int       @default(0)
  isCompleted Boolean   @default(false)
  updatedAt   DateTime  @updatedAt

  @@id([userId, challengeId])
}
model Purchase {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  placeId   String?
  place     Place?   @relation(fields: [placeId], references: [id])
  points    Int
  size      String // small, medium, large
  co2Saved  Float    @default(0.8)
  bagsSaved Int      @default(1)
}
